<!DOCTYPE html>
<html>
  <head>
    <title>EcSample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   

    <nav class="navbar navbar-default navbar-fixed-top">   
      <div class="navbar-header">
        <h1 class="navbar-brand" ><%= link_to "EC Sample", goods_path %></h1>
      </div>

        <% if user_signed_in? %>

        <ul class="nav navbar-nav navbar-right" style="padding-right: 15px;">
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to "My Page", user_show_path(current_user.name) %></li>
          <li><%= link_to "Top", goods_path %></li>
        </ul>
          <br><br>Logged in as <strong><%= current_user.name %></strong>

        <% else %>

        <ul class="nav navbar-nav navbar-right" style="padding-right: 15px;">
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <li><%= link_to "Top", goods_path %></li>
        </ul>
        <% end %>

    </nav>

    <%= yield %>
  </body>
</html>
